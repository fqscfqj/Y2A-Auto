FROM python:3.11-slim AS builder

# è®¾ç½®å·¥ä½œç›®å½•
WORKDIR /app

# å®‰è£…æ„å»ºä¾èµ–ï¼ˆä¸ä½¿ç”¨ BuildKit çš„ --mount è¯­æ³•ï¼‰
ENV DEBIAN_FRONTEND=noninteractive
RUN rm -f /var/lib/apt/lists/lock /var/lib/dpkg/lock-frontend /var/cache/apt/archives/lock || true \
    && dpkg --configure -a || true \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
        gcc \
        python3-dev \
    && rm -rf /var/lib/apt/lists/* /var/cache/apt/archives/*.deb \
    && apt-get clean

# å¤åˆ¶ä¾èµ–æ–‡ä»¶
COPY requirements.txt .

# å®‰è£… Python ä¾èµ–åˆ°æœ¬åœ°ç”¨æˆ·ç›®å½•ï¼ˆä¸ä½¿ç”¨ç¼“å­˜æŒ‚è½½ï¼‰
ENV PIP_DISABLE_PIP_VERSION_CHECK=1
RUN pip install --user --no-cache-dir --trusted-host pypi.python.org --trusted-host pypi.org --trusted-host files.pythonhosted.org -r requirements.txt

# éªŒè¯ yt-dlp å®‰è£…
